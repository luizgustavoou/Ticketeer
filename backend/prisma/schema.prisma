generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  nome    String
  email   String   @unique
  tickets Ticket[]

  // Auth
  // login    String
  password String

  role Role
}

enum Role {
  ADMIN
  ATENDENTE
}

model Ticket {
  id           Int          @id @default(autoincrement())
  tipo         TipoTicket
  motivo       Motivo       @relation(fields: [motivoId], references: [id])
  motivoId     Int
  descricao    String
  // cliente
  // veiculo
  dataAbertura DateTime     @default(now())
  prazo        DateTime
  status       StatusTicket @default(PARADO)
  Usuario      Usuario?     @relation(fields: [usuarioId], references: [id])
  usuarioId    Int
}

model Motivo {
  id        Int      @id @default(autoincrement())
  descricao String
  Ticket    Ticket[]
}

model Veiculo {
  id Int @id @default(autoincrement())
}

enum StatusTicket {
  PARADO
  PROGRESSO
  CONCLUIDO
}

enum TipoTicket {
  OPERACIONAL
  SUPORTE
  RELACIONAMENTO
  VENDAS
}
