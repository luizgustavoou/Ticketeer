generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  name  String?
  email String  @unique

  // Auth
  auth UserAuth?
}

model UserAuth {
  id   Int  @id @default(autoincrement())
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int @unique

  login String
  password String
}

model Ticket {
  id   Int  @id @default(autoincrement())
  tipo TipoTicket
  motivo String
  descricao String
  // cliente
  // veiculo
  dataAbertura DateTime @default(now())
  prazo DateTime
  status StatusTicket @default(PARADO)
}

model Veiculo {
  id   Int  @id @default(autoincrement())
  

}

enum StatusTicket {
  PARADO
  PROGRESSO
  CONCLUIDO
}

enum TipoTicket {
  OPERACIONAL
  SUPORTE
  RELACIONAMENTO
  VENDAS
}